# Provedor de email (ex.: AWS SES)
EMAIL_PROVIDER=ses
EMAIL_SENDER=no-reply@exemplo.com
SES_ACCESS_KEY=trocar
SES_SECRET_KEY=trocar
SES_REGION=us-east-1

# SMTP fallback
SMTP_HOST=smtp.exemplo.com
SMTP_PORT=587
SMTP_USERNAME=usuario
